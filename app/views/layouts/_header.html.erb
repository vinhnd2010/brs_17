<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_page.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "book.books" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("book.all_book"), books_path %></li>
              <li><%= link_to t("book.new"), new_admin_book_path if can? :create, Book %></li>
              <li class="divider"> </li>
            </ul>
          </li>
          <li><%= link_to t("user.index"), users_path %></li>
          <li><%= link_to t("user.sent_request"), new_request_path if can? :create, Request %></li>
          <li class="dropdown">
            <a href="" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "user.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user.profile"), user_path(current_user) %></li>
              <li><%= link_to t("user.setting"), "#" %></li>
              <li class="divider"> </li>
              <li>
                <%= link_to t("user.logout"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("user.login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
