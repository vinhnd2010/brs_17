<div class="col-md-3 col-sm-4 col-xs-6">
  <div class="book-item">
    <div class="flip">
      <div class="front text-center">
        <%= image_tag book.cover.thumb.url, class: "img-responsive book-img",
          alt: book.title %>
      </div>
      <div class="back">
        <p class="short-desc">
          <%= book.description.truncate(60).html_safe %>
        </p>
        <%= link_to t("book.button.show"), edit_admin_book_path(book),
          class: "btn btn-sm btn-primary btn-view" %>
      </div>
    </div>
    <h3 class="title">
      <%= link_to book.title, edit_admin_book_path(book) %>
    </h3>
    <p class="author">
      <%= book.author %>
    </p>
  </div>
</div>
