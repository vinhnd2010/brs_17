<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <%= gravatar_for @user %>
      <%= link_to @user.name, @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
