<% @user ||= current_user %>
<div class="stats">
  <a href="<%= user_relationship_path @user, relationship: :following %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "user.following" %>
  </a>
  <a href="<%= user_relationship_path @user, relationship: :followers %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "user.followers" %>
  </a>
</div>
